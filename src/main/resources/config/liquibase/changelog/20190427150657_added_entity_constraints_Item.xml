<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Item.
    -->
    <changeSet id="20190427150657-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="item"
                                 constraintName="fk_item_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/items.csv"
                  separator=";"
                  tableName="item">
            <column name="active" type="boolean"/>
        </loadData>

        <addForeignKeyConstraint baseColumnNames="manufacturer_id"
                                 baseTableName="item"
                                 constraintName="fk_item_manufacturer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="manufacturer"/>

    </changeSet>
</databaseChangeLog>
